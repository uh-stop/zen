<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Cutscene</title>
  <style>
    body {
      background: black;
      color: white;
      font-family: "Press Start 2P", monospace;
      font-size: 16px;
      padding: 20px;
      white-space: pre-wrap;
    }
    #text {
      max-width: 600px;
    }
  </style>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
</head>
<body>
  <div id="text"></div>

  <script>
    const fullText = "In a world forgotten by time...\nA shadow rises.\n\nPress Z to continue...";
    let index = 0;
    let typing = false;
    let interval;

    // Create beep sound
    const beep = new (window.AudioContext || window.webkitAudioContext)();
    function playSound() {
      const oscillator = beep.createOscillator();
      const gain = beep.createGain();
      oscillator.frequency.value = 180; // low pitch
      oscillator.type = "square";
      gain.gain.value = 0.05;
      oscillator.connect(gain);
      gain.connect(beep.destination);
      oscillator.start();
      oscillator.stop(beep.currentTime + 0.05);
    }

    document.addEventListener("keydown", (e) => {
      if (e.key === "z" || e.key === "Z") {
        if (!typing && index < fullText.length) {
          typing = true;
          interval = setInterval(() => {
            const char = fullText[index];
            document.getElementById("text").textContent += char;
            if (char !== " " && char !== "\n") playSound();
            index++;
            if (index >= fullText.length) {
              clearInterval(interval);
              typing = false;
            }
          }, 50);
        } else if (typing) {
          clearInterval(interval);
          document.getElementById("text").textContent = fullText;
          typing = false;
          index = fullText.length;
        }
      }
    });
  </script>
</body>
</html>
